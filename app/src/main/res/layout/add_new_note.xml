<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Note Title"
            android:layout_width="128dp"
            android:layout_height="21dp"
            android:id="@+id/textView2" android:textAlignment="center"
            android:textSize="18sp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="51dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="142dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="141dp"/>
    <EditText
            android:layout_width="295dp"
            android:layout_height="234dp"
            android:inputType="textPersonName"
            android:text="note body"
            android:ems="10"
            android:id="@+id/new_note_body"
            android:hint="add note here"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="58dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="59dp" android:autofillHints="" android:layout_marginTop="63dp"
            app:layout_constraintTop_toBottomOf="@+id/new_note_title"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/new_note_body_title_btn" android:layout_marginTop="112dp"
            app:layout_constraintTop_toBottomOf="@+id/new_note_body" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="161dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:text="add note"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:ems="10"
            android:id="@+id/new_note_title"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="98dp"
            android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="100dp"/>
</android.support.constraint.ConstraintLayout>