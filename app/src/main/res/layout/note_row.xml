<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content" android:id="@+id/noteTitle_textView">

    <TextView
            android:text="@string/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title_note_text_view" android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"/>
    <TextView
            android:text="@string/textview"
            android:layout_width="275dp"
            android:layout_height="32dp"
            android:id="@+id/body_note_text_view" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp" android:layout_marginTop="19dp"
            app:layout_constraintTop_toBottomOf="@+id/title_note_text_view" android:layout_marginBottom="70dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@android:drawable/ic_menu_delete"
            android:id="@+id/imageButton4"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/body_note_text_view" app:layout_constraintVertical_bias="1.0"
            android:contentDescription="@string/app_name"/>
</android.support.constraint.ConstraintLayout>